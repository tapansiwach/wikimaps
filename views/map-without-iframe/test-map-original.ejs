<!DOCTYPE html>
<html>

<head>
  <%- include("../partials/_head") %>
    <script src="https://polyfill.io/v3/polyfill.min.js?features=default"></script>
    <link rel="stylesheet" type="text/css" href="./style.css" />
    <script src="assets/js/googleMapsAPI.js"></script>
</head>

<body>

  <!-- Async script executes immediately and must be after any DOM elements used in callback. -->
  <div id="wrapper">
    <nav class="navbar navbar-dark align-items-start sidebar sidebar-dark accordion bg-gradient-primary p-0">
      <div class="container-fluid d-flex flex-column p-0"><a
          class="navbar-brand d-flex justify-content-center align-items-center sidebar-brand m-0" href="#">
          <div class="sidebar-brand-icon rotate-n-15"><i class="fas fa-map-marked-alt"></i></div>
          <div class="sidebar-brand-text mx-3"><span>Wikimaps</span></div>
        </a>
        <hr class="sidebar-divider my-0">
        <ul class="navbar-nav text-light" id="accordionSidebar">
          <li class="nav-item"><a class="nav-link" href="/maps"><i class="fa fa-map"></i><span>All
                Maps</span></a></li>
          <li class="nav-item"><a class="nav-link" href="/my-maps"><i class="fas fa-map-marked-alt"></i><span>My
                Maps</span></a></li>
          <li class="nav-item"><a class="nav-link" href="/create-map"><i class="fas fa-plus"></i><span>Create A
                Map</span></a></li>
          <li class="nav-item"><a class="nav-link active" href="/test-map1"><i class="far fa-eye"></i><span>View
                Map</span></a></li>
          <li class="nav-item"><a class="nav-link" href="/profile"><i class="fas fa-user"></i><span>Profile</span></a>
          </li>
        </ul>
        <div class="text-center d-none d-md-inline"><button class="btn rounded-circle border-0" id="sidebarToggle"
            type="button"></button></div>
      </div>
    </nav>
      <div class="d-flex flex-column" id="content-wrapper">
        <div id="content">
          <%- include("../partials/_header"); %>
            <div class="container-fluid" style="padding: 0px 10px;">
              <div class="d-sm-flex justify-content-between align-items-center mb-4">
                <h3 class="text-dark mb-0">
                  <%= map.title %>
                </h3><a class="btn btn-primary btn-sm d-none d-sm-inline-block" role="button" href="#"><i
                    class="fas fa-download fa-sm text-white-50"></i>&nbsp;Download</a>
              </div>
              <div class="row justify-content-center" style="margin: 0px -12px;">
                <div class="col-lg-12 col-xl-12 mx-auto">
                  <div class="card shadow mb-4">
                    <div class="card-header d-flex justify-content-between align-items-center">
                      <h6 class="text-primary fw-bold m-0">
                        <%= map.city %>
                      </h6>
                      <div class="dropdown no-arrow"><button class="btn btn-link btn-sm dropdown-toggle"
                          aria-expanded="false" data-bs-toggle="dropdown" type="button"><i
                            class="fas fa-ellipsis-v text-gray-400"></i></button>
                        <div class="dropdown-menu shadow dropdown-menu-end animated--fade-in">
                          <p class="text-center dropdown-header">dropdown header:</p><a class="dropdown-item"
                            href="#">&nbsp;Add Pin</a>
                          <div class="dropdown-divider"></div><a class="dropdown-item"
                            href="#">&nbsp;Share&nbsp;&&nbsp;Collaborate</a>
                        </div>
                      </div>
                    </div>
                    <div class="card-body">
                      <div id="map" data-map="<%= JSON.stringify(map) %> "></div>

                    </div>

                  </div>
                </div>
              </div>
            </div>
        </div>
        <%- include("../partials/_footer"); %>
      </div><a class="border rounded d-inline scroll-to-top" href="#page-top"><i class="fas fa-angle-up"></i></a>
  </div>
  <script src="https://maps.googleapis.com/maps/api/js?key=<%= key %>&callback=initMap&v=weekly" async></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/js/bootstrap.bundle.min.js"></script>
  <script src="assets/js/theme.js"></script>
</body>

</html>
